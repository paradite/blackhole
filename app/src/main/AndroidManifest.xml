<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ac.thack.black.hole" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:name=".mainapp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <activity
            android:name="ac.thack.black.hole.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ac.thack.black.hole.UpgradesActivity"
            android:label="Upgrades Activity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            />
        <activity
            android:name="ac.thack.black.hole.HighscoreActivity"
            android:label="Highscore Activity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            />
        <activity
            android:name="ac.thack.black.hole.HowtoActivity"
            android:label="Howto Activity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            />    <activity
        android:name="ac.thack.black.hole.OptionsActivity"
        android:label="Options Activity"
        android:screenOrientation="landscape"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
        />
        <activity
            android:name="ac.thack.black.hole.CreditsActivity"
            android:label="Credits Activity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            />
        <activity
            android:name="ac.thack.black.hole.IntroActivity"
            android:label="Intro Activity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            />
        <activity
            android:name="ac.thack.black.hole.InstructionsActivity"
            android:label="Instructions Activity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            />
        <activity
            android:name="ac.thack.black.hole.NameActivity"
            android:label="Name Activity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            />
        <activity
            android:name="ac.thack.black.hole.InfoActivity"
            android:label="Info Activity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            />
    </application>

</manifest>
